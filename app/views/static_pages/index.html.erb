<!-- ===== CONTENT - START ===== -->
<div class="container">
    <section class="content-wrapper">
        <div class="row">
            <div class="col-sm-4">
<div class="box">
    <h4>share your thoughts: </h4>

    <%= form_for Newsfeed.new, :html => {:multipart => true}, authenticity_token: true do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
        
        <div class="form-group">
            <%= f.text_area :post, class: "form-control", required: true, rows: "6" %>
        </div>
        <div class="form-group">
            <%= f.file_field :image, class: "form-control" %>
        </div>
            <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
</div>

<div class="box sidebar-box widget-wrapper">
    <h3>Upcoming Events</h3>
    <div class="tournament">
        <a href="tournament.html"><img src="assets/esl.png" class="img-responsive" alt=""></a>
        <h4>ESL 2015</h4>
        <p>Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Nullam posuere magna a dapibus luctus.</p>
        <div class="date">21 - 29 June 2015</div>
        <div class="text-center"><a href="tournament.html" class="btn btn-primary">More info</a></div>
    </div>
</div>

<!-- ===== CHANNEL NOTIFICATION - START ===== -->
<div class="box sidebar-box widget-wrapper">
    <h3>Notifications</h3>
    
        <%= render :partial => 'layouts/channel_notification' %>
    
</div>
<!-- ===== CHANNEL NOTIFICATION - END ===== -->


<div class="box sidebar-box widget-wrapper">
    <h3>Latest Tweets</h3>
    <div id="twitter-wrapper">
    </div>
</div>

            </div>
            <div class="col-sm-8">
                <div class="box">
<div id="feed_post">
  <%= render :partial => 'newsfeeds/newsfeed', :collection => @feeds %>
</div>

<div class="text-center">
    <%= will_paginate @feeds %>
</div>

                </div>
            </div>
        </div>
    </section>
</div>
